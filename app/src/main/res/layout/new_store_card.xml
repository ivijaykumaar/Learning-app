<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="140dp"
    android:layout_height="200dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#80BAE2"
        tools:ignore="UnusedAttribute">


        <LinearLayout

            android:id="@+id/storeMainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:id="@+id/imageLoader"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imePdf"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_pdff"
                                android:contentDescription=""
                                tools:ignore="ContentDescription"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />

                            <ImageView
                                android:id="@+id/imeVideo"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_video"
                                tools:ignore="ContentDescription"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <ImageView
                                android:id="@+id/imeQB"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_quess"
                                tools:ignore="ContentDescription"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notes"
                                android:textSize="7dp"
                                android:textColor="#000"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:textStyle="bold|italic"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Live class"
                                android:textSize="7dp"
                                android:textColor="#000"
                                android:textStyle="bold|italic"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q/A Bank"
                                android:textSize="7dp"
                                android:textColor="#000"
                                android:textStyle="bold|italic"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txtVideoDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(3.30 hrs)"
                            android:layout_marginLeft="3dp"
                            android:textSize="6.5dp"
                            android:textColor="#000"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#FFFFFF"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 1024mb"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="6dp"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Downloading"
                                android:layout_marginLeft="5dp"
                                android:textSize="6dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <ProgressBar
                                android:id="@+id/barDownloading"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:visibility="visible"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="45dp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#FFFFFF"
                            android:layout_marginBottom="2dp"/>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkSubjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:text="Select"
                        android:textSize="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-13dp"
                        android:scaleX="0.60"
                        android:scaleY="0.60"/>

                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="3dp">


                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90 Days Trial period"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="6.4dp"
                    tools:ignore="RtlHardcoded"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.100 for 500 Days"
                    android:textSize="6.4dp"
                    android:textColor="#000"
                    tools:ignore="UnknownId"
                    android:layout_alignBaseline="@+id/txtDuration"
                    android:layout_alignBottom="@+id/txtDuration"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBtn"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/viewBtn"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="View"
                android:textStyle="bold|italic"
                android:background="@drawable/rounded_edittxt"
                style="@style/Widget.AppCompat.Button.Small"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/buyBtn"
                android:layout_width="100dp"
                android:layout_marginTop="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="Buy"
                android:textStyle="bold|italic"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_edittxt"
                style="@style/Widget.AppCompat.Button.Small"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Button
                android:id="@+id/trailBtn"
                android:layout_width="100dp"
                android:layout_marginTop="30dp"
                android:layout_height="20dp"
                android:text="Trial"
                android:textStyle="bold|italic"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_edittxt"
                style="@style/Widget.AppCompat.Button.Small"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>